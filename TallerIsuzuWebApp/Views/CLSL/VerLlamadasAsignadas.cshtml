@model IEnumerable<TallerIsuzuWebApp.Models.LlamadaDeServicioAsignadaViewModel>

@{
    ViewData["Title"] = "Llamadas de Servicio Asignadas";
}

<h2>@ViewData["Title"]</h2>

<!-- Token antifalsificación -->
<form id="tokenForm">
    <input type="hidden" name="__RequestVerificationToken" id="__RequestVerificationToken" value="@ViewData["AntiforgeryToken"]" />
</form>


<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th># llamada</th>
            <th>Chasis</th>
            <th>Placa</th>
            <th>Articulo</th>
            <th>Nombre</th>
            <th>Encargado</th>
            <th>Etapa</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var llamada in Model)
        {
            <tr>
                <td>@llamada.CallID</td>
                <td>@llamada.InternalSN</td>
                <td>@llamada.UPlacas</td>
                <td>@llamada.ItemName</td>
                <td>@llamada.Name</td>
                <td>@llamada.UsuarioLavador</td>
                <td>@llamada.FechaAsignacion</td>
                <td>
                    <button class="btn btn-success btn-sm iniciar" data-callid="@llamada.CallID">
                        <i class="bi bi-play-fill"></i> Iniciar
                    </button>
                    <button class="btn btn-danger btn-sm detener" data-callid="@llamada.CallID">
                        <i class="bi bi-stop-fill"></i> Detener
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Botones de iniciar y detener
        const iniciarBtns = document.querySelectorAll(".iniciar");
        const detenerBtns = document.querySelectorAll(".detener");

        iniciarBtns.forEach(btn => {
            btn.addEventListener("click", function () {
                const callID = this.getAttribute("data-callid");
                actualizarEstadoLlamada(callID, "En proceso");
            });
        });

        detenerBtns.forEach(btn => {
            btn.addEventListener("click", function () {
                const callID = this.getAttribute("data-callid");
                actualizarEstadoLlamada(callID, "finalizado");
            });
        });

        function actualizarEstadoLlamada(callID, estado) {
            // Preparar datos en formato JSON
            const data = { callID, estado };

            // Realizar la solicitud POST
            fetch('/CLSL/ActualizarEstadoLlamada', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload(); // Opcional: Actualizar la página para reflejar los cambios
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Hubo un problema al actualizar el estado.');
                });
        }
    });
</script>

